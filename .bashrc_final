# Smart Toggle CD: VsCode in/out with one command

# --- Smart Post-Cleanup Pip Suite ---

# 1. Install packages and clear ONLY on success
in_pip() {
    echo -e "${CYAN}üöÄ Installing: ${YELLOW}$*${NC}..."
    if pip3 install "$@"; then
        clear
        echo -e "${GREEN}‚úÖ Installation Finished & Terminal Cleared!${NC}"
        sleep 2
    else
        echo -e "${RED}‚ùå Installation Failed! Check errors above.${NC}"
    fi
}

# 2. Upgrade packages and clear
up_pip() {
    echo -e "${CYAN}üîÑ Upgrading: ${YELLOW}$*${NC}..."
    if pip3 install -U "$@"; then
        clear
        echo -e "${GREEN}‚úÖ Upgrade Finished & Terminal Cleared!${NC}"
        sleep 2
    else
        echo -e "${RED}‚ùå Upgrade Failed!${NC}"
    fi
}

# 3. Requirements install and clear
re_pip() {
    if [ -f "requirements.txt" ]; then
        echo -e "${CYAN}üìÑ Installing from requirements.txt...${NC}"
        if pip3 install -r requirements.txt; then
            clear
            echo -e "${GREEN}‚úÖ Requirements Installed & Terminal Cleared!${NC}"
            sleep 2
        fi
    else
        echo -e "${RED}‚ùå Error: requirements.txt not found!${NC}"
    fi
}

cd() {
    # 1. Smart Toggle Logic (VsCode in/out)
    if [ -z "$1" ]; then
        if [ "$PWD" == "$HOME/VsCode" ]; then
            builtin cd ~ && cls 
        else
            builtin cd ~/VsCode && cls
        fi
    else
        builtin cd "$@" 
        do cls 
    fi
    # 2. Smart Recursive Venv Activation
    # Ye tab tak upar dekhega jab tak .venv na mil jaye ya Root tak na pahunch jaye
    local dir="$PWD"
    while [ "$dir" != "/" ]; do
        if [ -d "$dir/.venv" ]; then
            if [ "$VIRTUAL_ENV" != "$dir/.venv" ]; then
                source "$dir/.venv/bin/activate"
            fi
            clear
            return # Venv mil gaya, kaam khatam
        fi
        dir=$(dirname "$dir")
    done

    # 3. Agar kahin bhi .venv nahi mila, toh deactivate karo
    if [ -n "$VIRTUAL_ENV" ]; then
        deactivate
    fi
    
    clear
}

# Aur bhi behtar version (jisme tu message de sake):
gp() {  
    current_branch=$(git rev-parse --abbrev-ref HEAD)
    git add .
    
    # Agar tumne koi message nahi diya, toh ye auto-message use karega
    if [ -z "$1" ]; then
        git commit -m "Auto-update from branch: $current_branch"
    else
        git commit -m "$1"
    fi

    git push origin "$current_branch" && cls
}


# System Update Function
sysupdate() {
   sudo apt update && sudo apt upgrade -y && cls 
    cls   # Enter dabate hi screen saaf
}

# Python Cache Cleaner
pyclean() {
    find . -type d -name "__pycache__" -exec rm -rf {} +
}

# Make Directory and Change into it
mkcd() {
    mkdir -p "$1" && cd "$1"
}

# System Resource Check
checkup() {
    echo "--- CPU & RAM Usage ---"
    free -h
    echo "--- Disk Space ---"
    df -h | grep '^/dev/'

    # ---  INTERACTIVE PART ---
    echo -n "Press Enter to clear screen and continue..."
    read  # Yeh line wait karegi jab tak tu Enter nahi dabata
    cls   # Enter dabate hi screen saaf
}

refresh() {
    source ~/.bashrc
    
    # Git sync
    cd ~/dotfile && gp "modified"
    cd - > /dev/null
    
    # Screen saaf
    cls
}


