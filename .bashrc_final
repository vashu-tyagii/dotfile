alias cls='clear' # Clear screen shortcut
alias config='code ~/dotfile/.bashrc_final' # Edit bashrc in VSCode
alias py='python3'
alias pip='pip3'
alias in_pip='pip3 install'        # Example: in_pip requests
alias up_pip='pip3 install -U'     # -U is short for --upgrade
alias re_pip='pip3 install -r requirements.txt' 
alias un_pip='pip3 uninstall -y -r requirements.txt' # Fixed name to 'un' for uninstall
alias venv='python3 -m venv .venv'
alias gs='git status'
alias gl='git log --oneline --graph --all --decorate'

# Smart Toggle CD: VsCode in/out with one command

cd() {
    # 1. Smart Toggle Logic (VsCode in/out)
    if [ -z "$1" ]; then
        if [ "$PWD" == "$HOME/VsCode" ]; then
            builtin cd ~
        else
            builtin cd ~/VsCode
        fi
    else
        builtin cd "$@"
    fi

    # 2. Smart Recursive Venv Activation
    # Ye tab tak upar dekhega jab tak .venv na mil jaye ya Root tak na pahunch jaye
    local dir="$PWD"
    while [ "$dir" != "/" ]; do
        if [ -d "$dir/.venv" ]; then
            if [ "$VIRTUAL_ENV" != "$dir/.venv" ]; then
                source "$dir/.venv/bin/activate"
            fi
            return # Venv mil gaya, kaam khatam
        fi
        dir=$(dirname "$dir")
    done

    # 3. Agar kahin bhi .venv nahi mila, toh deactivate karo
    if [ -n "$VIRTUAL_ENV" ]; then
        deactivate
    fi
}

# Aur bhi behtar version (jisme tu message de sake):
gp() {  
    current_branch=$(git rev-parse --abbrev-ref HEAD)
    git add .
    
    # Agar tumne koi message nahi diya, toh ye auto-message use karega
    if [ -z "$1" ]; then
        git commit -m "Auto-update from branch: $current_branch"
    else
        git commit -m "$1"
    fi

    git push origin "$current_branch" && cls &&  echo -e "\033[1;34mPush Sucessfully!\033[0m"
}


# System Update Function
sysupdate() {
   sudo apt update && sudo apt upgrade -y && cls &&  echo -e "\033[1;34mSystem Updated Successfully!\033[0m"

    # ---  INTERACTIVE PART ---
    echo -n "Press Enter to clear screen and continue..."
    read  # Yeh line wait karegi jab tak tu Enter nahi dabata
    cls   # Enter dabate hi screen saaf
}

# Python Cache Cleaner
pyclean() {
    find . -type d -name "__pycache__" -exec rm -rf {} +
}

# Make Directory and Change into it
mkcd() {
    mkdir -p "$1" && cd "$1"
}

# System Resource Check
checkup() {
    echo "--- CPU & RAM Usage ---"
    free -h
    echo "--- Disk Space ---"
    df -h | grep '^/dev/'

    # ---  INTERACTIVE PART ---
    echo -n "Press Enter to clear screen and continue..."
    read  # Yeh line wait karegi jab tak tu Enter nahi dabata
    cls   # Enter dabate hi screen saaf
}

refresh() {
    source ~/.bashrc
    
    # Git sync
    cd ~/dotfile && gp "modified"
    cd - > /dev/null
    
    # Screen saaf
    cls
    echo -e "\033[1;34mEverything Synced and Cleaned!\033[0m"
}


